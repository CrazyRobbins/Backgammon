                    </Grid>
                    <Grid Name="g24">
                        <Polygon Points="15.5, 0 0, 125 30, 125 15, 0" Fill="#FFC30000" Stretch="Fill"/>
                    </Grid>
                </UniformGrid>

            </Grid>
            <Border Grid.Column="1" BorderBrush="Black" BorderThickness="2">
                <Grid  Grid.Column="1" Background="SeaGreen">
                    <Grid Name="WhiOut" Background="DarkOliveGreen" Width="30" Height="100" Margin="32,0,32,-4" VerticalAlignment="Bottom" ></Grid>
                    <Grid Name="BlaOut" Background="DarkOliveGreen" Width="30" Height="100" Margin="34,0,34,220" ></Grid>
                    <Button x:Name="DiceRoll" Click="diceRoll" Width="60" Height="20" Margin="19,192,15,104" >Roll dice</Button>
                    <Grid Width="90" Height="60">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50*"></ColumnDefinition>
                            <ColumnDefinition Width="50*"></ColumnDefinition>

                        </Grid.ColumnDefinitions>
                        <UniformGrid Grid.Column="0"></UniformGrid>
                        <Image Name="DiceView" Source="Grafik\Dice1.png" Stretch="UniformToFill" HorizontalAlignment="Center"></Image>
                        <UniformGrid Grid.Column="1" HorizontalAlignment="Right" >
                            <Image Name="DiceView2" Source="Grafik\Dice5.png" Margin="-5,0,5,0" Stretch="UniformToFill" HorizontalAlignment="Center"/>


                        </UniformGrid>

                    </Grid>

                </Grid>
            </Border>
        </Grid>


